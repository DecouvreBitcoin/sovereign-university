{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "noErrorTruncation": false,
    "baseUrl": ".",
    "paths": {
      "@sovereign-university/api/content": ["libs/api/content/src/index.ts"],
      "@sovereign-university/api/github": ["libs/api/github/src/index.ts"],
      "@sovereign-university/api/server": ["libs/api/server/src/index.ts"],
      "@sovereign-university/api/user": ["libs/api/user/src/index.ts"],
      "@sovereign-university/database": ["libs/database/src/index.ts"],
      "@sovereign-university/types": ["libs/types/src/index.ts"],
      "@sovereign-university/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
