{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "check-types": {
      "dependsOn": [
        "@blms/content#build-types",
        "@blms/user#build-types",
        "@blms/github#build-types",
        "@blms/redis#build-types"
      ]
    },
    "build-types": {
      "outputs": ["dist/**"],
      "dependsOn": [
        "@blms/content#build-types",
        "@blms/user#build-types",
        "@blms/github#build-types",
        "@blms/redis#build-types"
      ]
    },
    "build": {
      "dependsOn": [
        "@blms/content#build",
        "@blms/user#build",
        "@blms/github#build",
        "@blms/redis#build"
      ],
      "outputs": ["dist/**"]
    }
  }
}
