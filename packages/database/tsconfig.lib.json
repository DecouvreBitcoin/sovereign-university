{
  "extends": "./tsconfig.json",
  "include": ["src/**/*.ts", "drizzle/schema.ts"],
  "exclude": [
    "vitest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "**/node_modules",
    "**/dist",
    "**/build"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true
  }
}
