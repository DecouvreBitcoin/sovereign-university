{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "check-types": {
      "dependsOn": [
        "@sovereign-university/types#build-types",
        "@sovereign-university/database#build-types"
      ]
    },
    "build-types": {
      "dependsOn": [
        "@sovereign-university/types#build-types",
        "@sovereign-university/database#build-types"
      ],
      "outputs": ["dist/**/*.d.ts"]
    },
    "build": {
      "dependsOn": [
        "@sovereign-university/types#build",
        "@sovereign-university/database#build"
      ],
      "outputs": ["dist/**"]
    }
  }
}
