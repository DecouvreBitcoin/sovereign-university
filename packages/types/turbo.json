{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "check-types": {
      "dependsOn": ["@sovereign-university/schemas#build-types"]
    },
    "generate-types:types-only": {
      "dependsOn": ["@sovereign-university/schemas#build-types"]
    },
    "generate-types": {
      "dependsOn": ["@sovereign-university/schemas#build"]
    },
    "build-types": {
      "dependsOn": ["generate-types:types-only"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["generate-types"],
      "outputs": ["dist/**"]
    }
  }
}
