{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["vitest/globals", "vitest/importMeta", "vite/client", "node"],
    "paths": {
      "#src/*": ["./src/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ],
  "references": [
    {
      "path": "../database/tsconfig.lib.json"
    },
    {
      "path": "../types/tsconfig.lib.json"
    }
  ]
}
