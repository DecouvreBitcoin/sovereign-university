{
  "eslint.validate": [
    "json",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.useSyntaxServer": "never",
  "typescript.tsserver.web.projectWideIntellisense.enabled": true,
  "typescript.tsserver.web.projectWideIntellisense.suppressSemanticErrors": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "settings": {
    "i18n-ally.keystyle": "nested",
    "i18n-ally.localesPaths": ["apps/web/public/locales"],
    "i18n-ally.autoDetection": true,
    "i18n-ally.enabledFrameworks": ["react"],
    "i18n-ally.indent": 2,
    "i18n-ally.tabStyle": "space",
    "i18n-ally.editor.preferEditor": true,
    "i18n-ally.sortKeys": true,
    "i18n-ally.keepFulfilled": false,
    "i18n-ally.enabledParsers": ["json"],
    "i18n-ally.extract.autoDetect": true,
    "i18n-ally.sourceLanguage": "en"
  },
  "i18n-ally.localesPaths": ["apps/web/public/locales"],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.extract.autoDetect": true,
  "files.exclude": {
    "**/tsconfig.*.tsbuildinfo": true
  },
  "files.watcherExclude": {
    "**/.DS_Store": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.turbo": true
  },
  "search.exclude": {
    "**/tsconfig.*.tsbuildinfo": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.turbo": true
  },
  "eslint.workingDirectories": ["./apps/web", "./apps/api", "./packages/*"]
}
